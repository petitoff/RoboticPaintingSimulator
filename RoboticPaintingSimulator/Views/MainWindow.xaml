<Window x:Class="RoboticPaintingSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoboticPaintingSimulator"
        xmlns:views="clr-namespace:RoboticPaintingSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <views:ConfigurationView />
        <views:StatisticsView Grid.Row="0" Grid.Column="1" Margin="10 0 0 0" />
        <views:RobotsView Grid.Row="1" Grid.Column="0"></views:RobotsView>
    </Grid>
</Window>